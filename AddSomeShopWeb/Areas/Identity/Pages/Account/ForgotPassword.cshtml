@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot password";
}

<div class="card shadow border-2 col-md-5 mt-4 mb-4 mx-auto">
    <div class="px-5 py-5">
        <div style="color:#223442; text-align: center;">
            <h1><b>@ViewData["Title"]</b></h1>
            <p style="font-size:15px;">Enter your email and we will send you a link to reset your password</p>
            <hr />
        </div>

        <div class="row pt-2 pb-3">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center pt-2">
                        <button type="submit" class="w-50 btn btn-lg" style="border-radius: 30px; background-color:#223442; color:white;">Reset Password</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}