<div class="container-fluid">
    <div class="row pt-4 pb-3">
        <!-- Title -->
        <div class="col-lg-6 col-sm-12 text-start mb-3 mb-sm-0">
            <h2 class="text-primary">New PO</h2>
        </div>

        <!-- Save and Send -->
        <div class="col-lg-2 col-sm-4 text-center mb-3 mb-sm-0">
            <a asp-area="Admin" asp-controller="Inventory" asp-action="AddPurchaseOrder" class="btn btn-primary">
                <i class="bi bi-floppy"></i> Save and Send
            </a>
        </div>

        <!-- Save Only Button -->
        <div class="col-lg-2 col-sm-4 text-center mb-3 mb-sm-0">
            <a href="#" class="btn btn-dark">
                <i class="bi bi-floppy"></i> Save Only
            </a>
        </div>

        <!-- Export Button -->
        <div class="col-lg-2 col-sm-4 text-center mb-3 mb-sm-0">
            <a href="#" class="btn btn-success">
                <i class="bi bi-box-arrow-up"></i> Export
            </a>
        </div>  
    </div>

    <!--Product Information-->
    <div class="row pt-4 pb-3">
        <div class="col-12">
            <div class="border p-3 container shadow">
                <!--Title-->
                <div class="row pb-2">
                    <div class="col-12 text-primary">
                        <h4>Supplier Information</h4>
                        <hr />
                    </div>
                </div>

                <!--Supplier & Emails-->
                <div class="row">
                    <div class="col-6">
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="exampleSelect1">Supplier Name <span class="text-danger">*</span></label>
                            <select class="form-select" id="exampleSelect1">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>


                    <div class="col-6">
                        <div class="input-group mb-3">
                            <label class="input-group-text" id="inputGroup-email-add">Email Address <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" aria-describedby="inputGroup-email-add">
                        </div>
                    </div>

                </div>
            </div>
        </div>


    </div>




    <div class="row pt-4 pb-3">
        <div class="col-12">
            <div class="border p-3 container shadow">
                <!--Title-->
                <div class="row pb-2">
                    <div class="col-12 text-primary">
                        <h4>Order Details</h4>
                        <hr />
                    </div>
                </div>

                <!--Supplier & Emails-->
                <div class="row">
                    <div class="col-6">
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="exampleSelect1">Supplier Name <span class="text-danger">*</span></label>
                            <select class="form-select" id="exampleSelect1">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>


                    <div class="col-6">
                        <div class="input-group mb-3">
                            <label class="input-group-text" id="inputGroup-email-add">Email Address <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" aria-describedby="inputGroup-email-add">
                        </div>
                    </div>

                </div>
            </div>
        </div>


    </div>

</div>
